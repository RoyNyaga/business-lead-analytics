<%= form_with(model: business) do |form| %>
  <% if business.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(business.errors.count, "error") %> prohibited this business from being saved:</h2>

      <ul>
        <% business.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <%= form.label :name, "Business Name" %>
      <%= form.text_field :name, class: "form-control", required: true %>
    </div>

    <div class="col-md-6">
      <%= form.label :num_of_employees, "Number Of Employees" %>
      <%= form.text_field :num_of_employees, class: "form-control" %>
    </div>

    <div class="col-md-6">
      <%= form.label :industry_id, style: "display: block" %>
      <%= form.collection_select :industry_id, Industry.all, :id, :name, prompt: true, class: "form-control", required: true %>
    </div>

    <div>
      <%= form.text_field :user_id, value: current_user.id, style: "display: none" %>
    </div>
  </div>

  <div>
    <%= form.submit "Create Business", class: "btn btn-success my-3" %>
  </div>
<% end %>
