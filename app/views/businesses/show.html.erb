<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render @business %>
      <div>
        <%= link_to "Edit this business", edit_business_path(@business) %> |
        <%= link_to "Back to businesses", businesses_path %>
        <%= button_to "Destroy this business", @business, method: :delete %>
      </div>
    </div>
    <div class="col-md-7">
      <h2 class="text-center heading-fonts">Quaterly Goals</h2>
      <%= render "goals/modal" %>
      <% @business.goals.each do |goal| %>
        <%= render partial: "goals/goal", locals: { goal: goal } %>
      <% end %>
    </div>
    <div class="col-md-2">
      <h2 class="text-center heading-fonts">Channels</h2>
      <%= render "channels/modal" %>
      <% @business.channels.each do |channel| %>
        <%= render partial: "channels/channel", locals: { channel: channel} %>
      <% end %>
    </div>
  </div>
</div>
