<div class="container-fluid">
  <div class="row">
    <div class="col-6 col-md-2 px-2"><%= render "goals/goal_select_form" %></div>
    <div class="col-md-8"></div>
    <div class="col-6 col-md-2 px-2"><%= render "goals/year_select_form" %></div>
  </div>
  <% if @weekly_data_entries.present? %>
    <% if @report_type == "goal" %>
      <%= render "goals/goal_summary" %>
    <% else %>
      <%= render "goals/yearly_summary" %>
    <% end %>
  <% else %>
    <%= render "goals/no_data" %>
  <% end %>
</div>
