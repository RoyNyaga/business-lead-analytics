      <% end %>
    </div>

    <%= form.hidden_field :business_id, value: @business.id %>
    <%= form.hidden_field :user_id, value: current_user.id %>

    <%= form.submit "Create Goal", class: "btn btn-success" %>
  </div>
<% end %>
